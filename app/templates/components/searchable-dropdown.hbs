{{#ui-dropdown class="multiple" onChange=(action 'updateSelected')}}
  <input type="hidden" name="filters">
  <i class="filter icon"></i>
  <span class="text">Filter Actions</span>
  <div class="menu">
    <div class="ui icon search input">
      <i class="search icon"></i>
      <input type="text" placeholder="Search tags..." autofocus>
    </div>
    <div class="divider"></div>
  {{#each itemActions as |a|}}
    <div class="item" data-id="{{a}}">
      {{a}}
    </div>
  {{/each}}
  </div>
{{/ui-dropdown}}
